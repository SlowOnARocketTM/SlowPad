{
    "manufacturer": "Hamza El Mekkaoui",
    "keyboard_name": "slowpad",
    "maintainer": "SlowOnARocketTM",
    "bootloader": "rp2040",
    "processor": "RP2040",

    "diode_direction": "COL2ROW",

    "matrix_pins": {
        "rows": ["GP0", "GP1", "GP2"],
        "cols": ["GP3", "GP4"]
    },
    
    "features": {
        "bootmagic": true,
        "extrakey": true,
        "mousekey": true,
        "nkro": true
    },

    "usb": {
        "vid": "0xFEED",
        "pid": "0x0000",
        "device_version": "1.0.0"
    },

    "layouts": {
        "LAYOUT_ortho_3x2": {
            "layout": [
                {"matrix": [0, 0], "x": 0, "y": 0},
                {"matrix": [0, 1], "x": 1, "y": 0},
                {"matrix": [1, 0], "x": 0, "y": 1},
                {"matrix": [1, 1], "x": 1, "y": 1},
                {"matrix": [2, 0], "x": 0, "y": 2},
                {"matrix": [2, 1], "x": 1, "y": 2}
            ]
        }
    }
}
